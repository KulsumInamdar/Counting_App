<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ar"
                android:tag="arabic"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="Arabic"></Button>

            <Button
                android:id="@+id/en"
                android:tag="english"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="English"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ch"
                android:tag="chinese"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="Chinese"></Button>

            <Button
                android:id="@+id/ja"
                android:tag="japanese"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="Japanese"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fr"
                android:tag="french"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="French"></Button>

            <Button
                android:id="@+id/hi"
                android:tag="hindi"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onAudio"
                android:text="Hindi"></Button>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/st"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:onClick="onStop"
        android:text="Stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>

